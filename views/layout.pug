doctype html
html
    head
        meta(charset="utf8")
        block title
        title Mon Site Japon
        block js
            script(src="/jquery/jquery.min.js")
            script(src="/bootstrap/js/bootstrap.min.js")
        block css
        link(rel="stylesheet" href="/bootstrap/css/bootstrap.min.css")
        link(rel="stylesheet" media="screen" type="text/css" href="/css/style.css")
        style.
            #fontsizexl {font-size: 10em;}
            label {font-weight: bold;}
            .redBorder {border: 2px solid red;}
    body(style="background-color: #f2f2f2;")
        block header
            include ./fragments/nav.pug
        .row.justify-content-center.mt-5
            .col-md-6.text-center
                - const messages = getMessages()
                if messages
                    if messages.infos
                        .alert.alert-success
                            each message in messages.infos
                                p= message
                    if messages.errors
                        .alert.alert-danger
                            each message in messages.errors
                                p= message
        block content
        block footer
            include ./fragments/footer.pug